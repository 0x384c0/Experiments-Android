<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/content_constraints"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context="com.desu.experiments.view.activity.material.ConstraintsActivity"
                                             tools:showIn="@layout/activity_constraints">

    <android.support.v7.widget.CardView
        android:id="@+id/frameLayout1"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="?attr/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/content_constraints"
        app:layout_constraintTop_toTopOf="@+id/content_constraints">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/frameLayout2"
        android:layout_width="169dp"
        android:layout_height="106dp"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="@color/indigo"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintLeft_toLeftOf="@+id/frameLayout1"
        app:layout_constraintRight_toRightOf="@+id/frameLayout1"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout1">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/frameLayout3"
        android:layout_width="113dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/teal"
        app:layout_constraintLeft_toLeftOf="@+id/frameLayout2"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:cardBackgroundColor="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
        app:layout_constraintLeft_toRightOf="@+id/frameLayout3"
        app:layout_constraintTop_toTopOf="@+id/frameLayout3"
        app:layout_constraintVertical_bias="0.71"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_constraints"
        android:layout_marginRight="16dp">

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
