<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--UI-->
    <style name="AppTheme.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AppTheme.TextInputLayout.Disabled" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/grayLineColor</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>


    <!--alerts-->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>




    <!--UI elements-->
    <style name="AppTheme.TitleTextView">
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.DetailTextView">
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="AppTheme.HorizontalLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/bg_divider_horizontal</item>
    </style>

    <style name="AppTheme.VerticalLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/bg_divider_vertical</item>
    </style>


    <style name="AppTheme.VerticalLinearLayoutSmall">
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/bg_divider_vertical_small</item>
    </style>
</resources>
